{
  "openapi": "3.0.0",
  "info": {
    "title": "Light Code API",
    "version": "1.0.0"
  },
  "paths": {
    "/bojeong-oheng": {
      "post": {
        "summary": "빛의 코드 오행 보정 계산",
        "description": "기본 오행 + 이름, 손금, 별자리 보정을 통합하여 최종 오행을 반환",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InputData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "최종 오행 보정 결과",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OhengResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "InputData": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "hanja_name": { "type": "string" },
          "birth": { "type": "string" },
          "calendar": { "type": "string" },
          "birth_time": { "type": "string" },
          "birth_place": { "type": "string" },
          "gender": { "type": "string" },
          "zodiac": { "type": "string" },
          "palm_lines": {
            "type": "object",
            "properties": {
              "life_line": { "type": "string" },
              "fate_line": { "type": "string" },
              "emotion_line": { "type": "string" },
              "head_line": { "type": "string" },
              "marriage_line": { "type": "string" },
              "money_line": { "type": "string" }
            }
          }
        }
      },
      "OhengResult": {
        "type": "object",
        "properties": {
          "base_oheng": { "type": "object" },
          "bojeong_oheng": { "type": "object" },
          "final_oheng": { "type": "object" },
          "explanation": { "type": "object" }
        }
      }
    }
  }
}
